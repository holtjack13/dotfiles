;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = ${xrdb:color0}
foreground = ${xrdb:color7}

alt-text-colour = ${xrdb:color6}

[bar/top]
monitor = VGA-1
bottom = false

width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

; How rounded the bar edges are
radius = 0.0

line-size = 1
underline-size= 1

padding = 2
module-margin = 1

modules-left = i3
modules-center = xwindow
modules-right = date

font-0 = Terminus:size=10;1
font-1 = FontAwesome:size=10;1

[bar/bottom]
monitor = VGA-1
bottom = true

width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0.0

line-size = 1
overline-size = 1

padding = 2
module-margin = 1

modules-left = filesystem
;modules-center = date
modules-right = volume

font-0 = Terminus:size=10;1
font-1 = FontAwesome:size=10;1

[module/i3]
type = internal/i3
index-sort = true
enable-click = true

; Sets workspace labels to be icons in i3 config
label-focused = %name%
label-unfocused = %name%
label-visible = %name%
label-urgent = %name%

; Adds underline to focused workspace in specified colour
label-focused-underline = ${colors.foreground}

; Increases space between workspace icons
label-focused-padding = 2
label-unfocused-padding = 1
label-visible-padding = 1

[module/date]
type = internal/date

interval = 1.0

date = %d-%m-%Y%

time = %H:%M

format =  <label>
format-foreground = ${colors.alt-text-colour}
label = %date% %time%

[module/xwindow]
type = internal/xwindow

label =  %title%

[module/volume]
type = internal/volume

[module/filesystem]
type = internal/fs

mount-0 = /

interval = 30

fixed-values = true
